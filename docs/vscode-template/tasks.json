{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mvn clean package -DskipTests",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "KEYVAULT_NAME": "{your keyvault name}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "mvn spring-boot:run",
            "group": "build",
            "options": {
                "env": {
                    "KEYVAULT_NAME": "{your keyvault name}"
                }
            }
        }
    ]
}